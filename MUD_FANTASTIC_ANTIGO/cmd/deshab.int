classe cmd_deshab
herda comando_comum
#
const posic = 0
#

func escr
  se !arg1
    ret arg0.msg("Digite o nome da habilidade que deseja descartar, após deshab.")
  senao
    se !arg0.var.h_[txts(arg1)]
      ret arg0.msg("Você não possui a habilidade " + arg1 + ".")
    fimse
    arg0.var.h_[txts(arg1)] = ""
    arg0.msg("Você descarta a habilidade " + arg1 + ".")
  fimse
