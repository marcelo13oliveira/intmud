func escr
  se arg1
    ref p
    refvar nomesav = txts(txtnome(txt1(arg1)))
    indiceitem item
    item.ini("pn " + nomesav)
    p = item.obj
    ret intnome(arg1), arg0.msg("Nome inválido para jogador: " + arg1)
